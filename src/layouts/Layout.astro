---
import Github from '../components/Icons/github';
import Linkedin from '../components/Icons/linkedin';
import Logo from '../components/Icons/logo';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="w-full h-24 bg-gray-800 py-4 px-8 xl:px-0 flex items-center justify-center">
			<div class="w-full max-w-[1280px] flex items-center justify-center lg:justify-between px-8 2xl:px-0">
				<a href="/">
					<Logo />
				</a>
				<Navigation complementaryClass="hidden lg:grid" theme='light'/>
			</div>
		</header>
		<main class="w-full flex items-center justify-center">
			<slot />
		</main>
		<footer class="w-full bg-gray-800 p-8 flex flex-col gap-4 items-center text-gray-50">
			<div class="w-full md:hidden">
				<h3 class="font-semibold text-lg">Socail media</h3>
			</div>

			<div class="flex gap-4 w-full items-center justify-center">
				<a href="https://github.com/jeffersontk" target="_blank" class="w-full max-w-[160px] h-24 flex flex-col gap-2 items-center justify-center border border-gray-50 p-2 rounded">
					<Github fill="#f8fafc"/>
					Jeffersontk
				</a>
				<a href="https://www.linkedin.com/in/jeffersonsbrito/" target="_blank" class="w-full max-w-[160px] h-24 flex flex-col gap-2 items-center justify-center border border-gray-50 p-2 rounded">
					<Linkedin fill="#f8fafc"/>
					Jeffersonsbrito
				</a>
			</div>
			<div class="w-full h-[1px] bg-gray-50" />
			<h3 class="font-light text-lg">Developed by Jefferson S. Brito Cabral</h3>
		</footer>
	</body>
</html>


---
import LinkNavigation from './LinkNavigation.astro'

interface Props {
  complementaryClass?: string
  theme: 'light' | 'dark'
}

const {complementaryClass, theme} = Astro.props
---

<nav class={`w-full lg:max-w-[350px] grid grid-cols-3 gap-4 ${complementaryClass} `}>
  <LinkNavigation href='/resume' fill={theme === 'light' ? '#f8fafc' : '#475569'} title='Resume'/>
  <LinkNavigation href='/blog' fill={theme === 'light' ? '#f8fafc' : '#475569'} title='Blog'/>
  <LinkNavigation href='/project' fill={theme === 'light' ? '#f8fafc' : '#475569'} title='Project'/>
</nav>